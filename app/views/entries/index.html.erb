<h1>Listing entries</h1>

<table>
  <tr>
    <th>Type of</th>
    <th>Title</th>
    <th>Day</th>
    <th>Score</th>
    <th>Votes</th>
    <th></th>
    <th></th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%= entry.type_of %></td>
    <td><%= link_to entry.title, entry %></td>
    <td><%= entry.day %></td>
    <td><%= entry.score %></td>
    <td><%= entry.voters.count %></td>
    <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
    <td><%= link_to 'Destroy', entry, confirm: 'Are you sure?', method: :delete, remote: true %></td>
  </tr>
<% end %>
</table>

